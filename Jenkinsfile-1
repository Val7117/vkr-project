pipeline {
    agent any
    environment {
        IMAGE_NAME='val7117/vkr-project'
        IMAGE_VERSION='0.0.1'
        COSIGN_PUBLIC_KEY=credentials('my-cosign-public-key')
    }
    stages {
        stage('Verify Docker image') {
            steps {
                sh 'cosign verify --key ghcr.io/val7117/vkr-project:sha256-04afc38518ac19283dc0fde598daf526a777dd1620afc46d7464c5a369e838bc.sig'
            }
        }
    }
}